<% include partials/header.ejs %>
<div class="container-fluid">
    <!--Page Heading-->
    <p class="mb-4">This is a list of all people in TraPO. Use the search to narrow down by first name, last name or date of birth. Click on person name to view person details.</p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">People</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <% if (persons.length > 0) {%>
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Date of Birth</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Date Added</th>
                                <th scope="col">Added By</th>
                                <th scope="col">Date Modified</th>
                                <th scope="col">Modified By</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% persons.forEach((person, index) => { %>
                                <tr>
                                    <td><%= person.firstname %></td>
                                    <td><%= person.lastname %></td>
                                    <td><%= person.dob %></td>
                                    <td><%= person.gender %></td>
                                    <td><%= person.dateadded %></td>
                                    <td><%= person.addedby %></td>
                                    <td><%= person.datemodified %></td>
                                    <td><%= person.modifiedby %></td>
                                    <td class="text-center">
                                        <a href="/editPerson/<%= person.personid %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="text-center">No persons found. Go <a href="/addPerson" >here</a> to add persons.</p>
                <% } %>
            </div>
        </div>
    </div>
    
</div>
<% include partials/footer.ejs %>